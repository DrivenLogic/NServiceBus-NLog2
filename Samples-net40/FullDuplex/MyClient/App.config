<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="MsmqTransportConfig" type="NServiceBus.Config.MsmqTransportConfig, NServiceBus.Core" />
    <section name="UnicastBusConfig" type="NServiceBus.Config.UnicastBusConfig, NServiceBus.Core" />
    <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog"/>
  </configSections>

  <!-- 1. In order to configure remote endpoints use the format: "queue@machine" 
       2. Input queue must be on the same machine as the process feeding off of it.
       3. Error queue can (and often should) be on a different machine.
       4. The community edition doesn't support more than one worker thread.
  -->

  <MsmqTransportConfig
    InputQueue="MyClientInputQueue"
    ErrorQueue="error"
    NumberOfWorkerThreads="1" 
    MaxRetries="5"
  />

  <UnicastBusConfig>
    <MessageEndpointMappings>
      <add Messages="MyMessages" Endpoint="MyServerInputQueue" />
    </MessageEndpointMappings>
  </UnicastBusConfig>
  
  <nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <targets>
      <wrapper-target xsi:type="AsyncWrapper" name="TextFile" queueLimit="10000" overflowAction="Block">
        <target xsi:type="File" fileName="logs\Client.log"
                layout="${longdate} ${level:uppercase=true:padding=5} [${logger}] | ${message} | ${processid} | ${threadname:whenEmpty=${threadid}} | ${exception:format=type,tostring}"/>
      </wrapper-target>
      <target name="OutputDebugString" xsi:type="OutputDebugString" layout="${longdate} ${level:uppercase=true:padding=5} [${logger}] | ${message} | ${exception:format=type,tostring}"/>
      <target name="console" xsi:type="ColoredConsole" layout="${longdate} ${level:uppercase=true:padding=5} [${logger}] | ${message} | ${exception:format=type,tostring}"/>
      <target name="debugger" xsi:type="Debugger" layout="${longdate} ${level:uppercase=true:padding=5} [${logger}] | ${message} | ${exception:format=type,tostring}"/>
    </targets>
    <rules>
      <logger name="*" minlevel="Trace" writeTo="TextFile,OutputDebugString,debugger,console" />
    </rules>
  </nlog>
</configuration>
